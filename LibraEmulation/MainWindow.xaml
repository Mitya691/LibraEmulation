<Window x:Class="LibraEmulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Эмулятор Весов" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Настройка соединения -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Порт:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="100" ItemsSource="{Binding AvailablePorts}" 
                      SelectedItem="{Binding SelectedPort}" Margin="0,0,10,0"/>
            <TextBlock Text="Скорость:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="100" ItemsSource="{Binding BaudRates}" 
                      SelectedItem="{Binding SelectedBaud}" Margin="0,0,10,0"/>
            <TextBlock Text="Четность:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="100" ItemsSource="{Binding Parities}" 
                      SelectedItem="{Binding SelectedParity}" Margin="0,0,10,0"/>
        </StackPanel>
        <!-- Параметры веса -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Вес (кг):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="100" Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <CheckBox Content="Успокоение" IsChecked="{Binding IsUspokoenie}" Margin="0,0,10,0"/>
            <CheckBox Content="Перегруз" IsChecked="{Binding IsPereg}" Margin="0,0,10,0"/>
        </StackPanel>
        <!-- Фиксированный адрес и кнопка управления -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Фиксированный адрес (дец.):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="50" Text="{Binding FixedAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <Button Content="{Binding StartStopButtonText}" Command="{Binding StartStopCommand}" Width="100"/>
        </StackPanel>
        <!-- Лог обмена -->
        <TextBox Grid.Row="3" Text="{Binding LogText}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>
