<Window x:Class="LibraEmulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Эмулятор Весов" Height="350" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Настройка связи -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Порт:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="comboPort" Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="Скорость:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="comboBaud" Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="Четность:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="comboParity" Width="100" Margin="0,0,10,0"/>
        </StackPanel>
        <!-- Настройка параметров веса -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Вес (кг):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtWeight" Width="100" Margin="0,0,10,0" Text="0.5"/>
            <CheckBox x:Name="chkUspokoenie" Content="Успокоение" Margin="0,0,10,0"/>
            <CheckBox x:Name="chkPereg" Content="Перегруз" Margin="0,0,10,0"/>
        </StackPanel>
        <!-- Фиксированный адрес устройства -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <!-- Теперь адрес вводится в десятичном формате -->
            <TextBlock Text="Фиксированный адрес (десятичное число):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtFixedAddress" Width="50" Text="20"/>
            <Button x:Name="btnStart" Content="Старт" Width="100" Margin="10,0,0,0" Click="btnStart_Click"/>
        </StackPanel>
        <!-- Лог обмена -->
        <TextBox x:Name="txtLog" Grid.Row="3" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>